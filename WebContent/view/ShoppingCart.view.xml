<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.ShoppingCart"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m">
	<Page
		id="page"
		title="{i18n>shoppingCartTitle}"
		backgroundDesign="Solid"
		showNavButton="true"
		navButtonText="{i18n>toFirstPage}"
		navButtonPress=".goToFirstPage">
		<headerContent>
			<Button text="{i18n>orderOverviewPage}" tooltip="{i18n>buyItemsTooltip}" press=".goToOverviewPage"/>
		</headerContent>
		<footer>
			<Toolbar>
				<Text
					id="totalPriceText"
					text="{
						path : 'cartProducts>/cartEntries',
						formatter : '.formatter.totalPrice'
					} EUR" />
				<ToolbarSpacer/>
			</Toolbar>
		</footer>
		<content>
			<List
				delete="handleDelete"
				mode="Delete"
				items="{cartProducts>/cartEntries}">
				<items>
					<ObjectListItem
						intro="{cartProducts>Quantity} x"
						title="{cartProducts>ProductName}">
						<firstStatus>
							<ObjectStatus text="{
								path : 'cartProducts>UnitPrice',
								formatter : '.formatter.price'
							} EUR" />
						</firstStatus>
					</ObjectListItem>
				</items>
				<!--<Button text="delete" press="" /> -->
			</List>
		</content>
	</Page>
</mvc:View>
