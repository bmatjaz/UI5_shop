<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.CategoriesMaster"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page
        title="{i18n>categoriesMasterPageTitle}">
        <headerContent>
			<Button icon="sap-icon://cart" tooltip="Cart" press=".goToShoppingCart" />
            <ToggleButton pressed="false" text="DE" tooltip="Language toggle" press=".changeLanguageDE" />
		</headerContent>
        <List
            items="{/Categories}">
            <items>
                <ObjectListItem
                    title="{CategoryName}"
                    type="Active"
                    press="onListItemPress" />
            </items>
        </List>
    </Page>
</mvc:View>